<i:arg type="sirius.biz.jobs.params.Parameter" name="param"/>
<i:arg type="Map" name="context"/>
<i:local name="entityParam" value="@param.as(sirius.biz.jobs.params.EntityParameter.class)"/>

<w:autocompleteSingleSelect span="@param.getSpan()"
                            smallSpan="@param.getSmallSpan()"
                            name="@param.getName()"
                            label="@param.getLabel()"
                            help="@param.getDescription()"
                            required="@param.isRequired()"
                            optional="@!param.isRequired()"
                            serviceUri="@entityParam.getAutocompleteUri()">

    <i:local name="idAndLabel" value="entityParam.renderCurrentValue(context)" />
    <i:if test="idAndLabel != null">
        <option value="@idAndLabel.getFirst()" selected="selected">
            @idAndLabel.getSecond()
        </option>
    </i:if>
</w:autocompleteSingleSelect>
